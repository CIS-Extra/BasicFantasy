<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.lewisandclark.csd.basicfantasy.RollAttributesActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/race_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/choose_race_title"
        android:textSize="30sp"/>

    <RadioGroup
        android:id="@+id/radioRace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/race_activity_title">

        <RadioButton
            android:id="@+id/radio_dwarf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dwarf"/>

        <RadioButton
            android:id="@+id/radio_elf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/elf"/>

        <RadioButton
            android:id="@+id/radio_halfling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/halfling"/>

        <RadioButton
            android:id="@+id/radio_human"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/human"/>


    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/radioRace"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/accept_race_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accept_race"
            app:layout_constraintTop_toBottomOf="@+id/radioRace"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/back"
            app:layout_constraintTop_toBottomOf="@+id/accept_race_button"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>